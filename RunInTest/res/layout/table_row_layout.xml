<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/table_row_id"
	     android:layout_height="40dp"
	     android:layout_width="fill_parent"
	     android:orientation="horizontal">
	     <TextView
		    android:id="@+id/id_text"
		    android:layout_weight="2"
		    android:layout_width="0dp"
		    android:layout_height="32dp" 
		    android:gravity="center"
		    style="@style/TableTextStyle"/>
		<View 
		    android:layout_width="1dp"
			android:layout_height="32dp" 
			android:background="@drawable/line_v" />
			
		<TextView 
		    android:id="@+id/test_case"
		    android:layout_width="0dp"
			android:layout_weight="6"
			android:layout_height="32dp" 
			android:gravity="center"
			android:text="@string/system_test_title"
			style="@style/TableTextStyle">
		</TextView>
		<View 
		    android:layout_width="1dp"
			android:layout_height="32dp" 
			android:background="@drawable/line_v" />
			
		<TextView 
		    android:id="@+id/test_result"
		    android:layout_width="0dp"
		    android:layout_weight="3"
		    android:layout_height="32dp" 
		    android:gravity="center"
		    android:text="@string/display_test_title"
		    style="@style/TableTextStyle">
		</TextView>
		<View 
		    android:layout_width="1dp"
		    android:layout_height="32dp" 
		    android:background="@drawable/line_v" />
		    
		<TextView 
		    android:id="@+id/test_all"
		    android:layout_width="0dp"
			android:layout_weight="2"
			android:layout_height="32dp" 
			android:gravity="center"
			android:text="@string/display_test_title"
			style="@style/TableTextStyle">
		</TextView>
	</LinearLayout>
